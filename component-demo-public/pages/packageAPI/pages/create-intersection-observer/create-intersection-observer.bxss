.scroll-view {
  height: 400px;
  background: #fff;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.scroll-area {
  height: 1300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: .5s;
}

.notice {
  margin-top: 150px;
}

.ball {
  width: 200px;
  height: 200px;
  background: #1AAD19;
  border-radius: 50%;
}

.filling {
  height: 400px;
}

.message {
  width: 100%;
  display: flex;
  justify-content: center;
}

.message text {
  font-size: 40px;
  font-family: -apple-system-font, Helvetica Neue,Helvetica,sans-serif;
}
