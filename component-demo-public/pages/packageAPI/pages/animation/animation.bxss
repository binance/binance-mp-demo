.animation-element-wrapper {
  display: flex;
  width: 100%;
  padding-top: 75px;
  padding-bottom: 75px;
  justify-content: center;
  overflow: hidden;
  background-color: #ffffff;
}
.animation-element {
  width: 100px;
  height: 100px;
  background-color: #1aad19;
}
.animation-buttons {
  padding: 15px 25px 5px;
  width: 100%;
  height: 330px;
  box-sizing: border-box;
}
.animation-button {
  float: left;
  line-height: 2;
  width: 150px;
  margin: 8px 11px;
}

.animation-button-reset {
  width: 610px;
}

.btn-row {
  display: flex;
  justify-content: space-between;
}
